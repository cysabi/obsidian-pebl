{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2021",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "noEmit": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "ES2021"],
    "paths": { "*": ["node_modules/obsidian-dataview/lib/*"] }
  },
  "exclude": ["vite.config.mts"]
}
